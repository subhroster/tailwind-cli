{
  "name": "tailwind-setup-cli",
  "version": "1.0.0",
  "description": "A command line tool for setting up Tailwind CSS with Prettier integration for automatic class sorting.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "tailwind-setup": "./index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "tailwindcss build src/styles/tailwind.css -o dist/tailwind.css",
    "watch:css": "tailwindcss build src/styles/tailwind.css -o dist/tailwind.css --watch"
  },
  "keywords": [
    "tailwindcss",
    "cli",
    "prettier",
    "plugin",
    "setup"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "commander": "^12.1.0",
    "execa": "^9.4.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.0.0"
  },
  "devDependencies": {
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subhroster/tailwind-cli.git"
  },
  "homepage": "https://github.com/subhroster/tailwind-cli#readme",
  "bugs": {
    "url": "https://github.com/subhroster/tailwind-cli/issues"
  }
}
